<script>
	import { setLocale} from "../paraglide/runtime.js"

	document.querySelector("#en-locale")?.addEventListener('click', () => {
		setLocale("en")
	})

	document.querySelector("#de-locale")?.addEventListener('click', () => {
		setLocale("de")
	})
</script>

<div>
  <button id="en-locale">Programmatically switch to en</button>
  <button id="de-locale">Programmatically switch to de</button>
</div>